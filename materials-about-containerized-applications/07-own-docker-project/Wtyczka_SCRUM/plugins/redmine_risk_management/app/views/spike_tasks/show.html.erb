<h1><%= @spike_task.name %></h1>

<p><strong>Description:</strong> <%= @spike_task.description %></p>
<p><strong>Status:</strong> <%= @spike_task.status %></p>

<%= form_for [@risk, @spike_task], url: project_risk_spike_task_path(@risk.project, @risk, @spike_task), method: :patch do |f| %>
  <p>
    <%= f.label :status, "Change Status" %><br>
    <%= f.select :status, SpikeTask::STATUSES %>
  </p>
  <p><%= f.submit "Update Status" %></p>
<% end %>

<%= link_to 'Back to Risk', project_risk_path(@risk.project, @risk) %>
