<h2>Nowe Ryzyko</h2>

<%= form_for [@project, @risk] do |f| %>
  <% if @risk.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@risk.errors.count, "error") %> prohibited this risk from being saved:</h2>
      <ul>
        <% @risk.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :likelihood %><br>
    <%= f.number_field :likelihood %>
  </p>

  <p>
    <%= f.label :impact %><br>
    <%= f.number_field :impact %>
  </p>

  <p>
    <%= f.label :assignee_id, "Osoba odpowiedzialna" %><br>
    <%= f.collection_select :assignee_id, User.all, :id, :name, include_blank: true %>
  </p>

  <p>
    <%= f.label :category, "Kategoria" %><br>
    <%= f.select :category, Risk::CATEGORIES, include_blank: true %>
  </p>

  <p>
    <%= f.label :status, "Status" %><br>
    <%= f.select :status, Risk::STATUSES %>
  </p>

  <p>
    <%= f.label :response, "Reakcja" %><br>
    <%= f.select :response, Risk::RESPONSES %>
  </p>

  <p>
    <%= f.submit 'Utwórz Ryzyko' %>
  </p>
<% end %>

<%= link_to 'Powrót do ryzyk', project_risks_path(@project) %> <!-- Link powrotny do listy ryzyk -->
