<%= stylesheet_link_tag 'project_management', plugin: 'redmine_risk_management' %>
<div class="project-details-container">
  <h1 class="project-header">Edytuj projekt: <%= @project.name %></h1>

  <%= form_with(model: @project, url: project_path(@project), method: :patch, local: true) do |f| %>
    <div class="project-details">
      <p>
        <%= f.label :name, 'Nazwa projektu' %><br>
        <%= f.text_field :name, class: 'form-control' %>
      </p>

      <p>
        <%= f.label :description, 'Opis projektu' %><br>
        <%= f.text_area :description, class: 'form-control' %>
      </p>

      <p>
        <%= f.label :start_date, 'Start Date' %><br>
        <%= f.date_field :start_date, value: @project.start_date, class: 'form-control' %>
      </p>

      <p>
        <%= f.label :due_date, 'Due Date' %><br>
        <%= f.date_field :due_date, value: @project.due_date, class: 'form-control' %>
      </p>

      <p>
        <%= f.label :estimated_time, 'Szacowany czas (w godzinach)' %><br>
        <%= f.number_field :estimated_time, class: 'form-control' %>
      </p>

      <p>
        <%= f.label :priority, 'Priorytet' %><br>
        <%= f.select :priority, ['normal', 'high', 'immediate'], include_blank: 'Wybierz priorytet', class: 'form-control' %>
      </p>

      <p>
        <%= f.label :author_id, 'Autor projektu' %><br>
        <%= f.collection_select :author_id, User.all, :id, :name, include_blank: 'Wybierz autora', class: 'form-control' %>
      </p>

      <p>
        <%= f.label :assignee_id, 'Osoba odpowiedzialna' %><br>
        <%= f.collection_select :assignee_id, User.all, :id, :name, include_blank: 'Wybierz osobę odpowiedzialną', class: 'form-control' %>
      </p>

      <div class="project-actions">
        <%= f.submit 'Zapisz zmiany', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
